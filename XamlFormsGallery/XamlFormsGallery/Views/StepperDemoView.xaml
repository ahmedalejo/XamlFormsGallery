<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamlFormsGallery.Views.StepperDemoView">

  <StackLayout>

    <Label FontSize="50"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           Text="{Binding Title}"/>
    <Stepper Minimum="0"
             Maximum="10"
             Increment="0.1"
             VerticalOptions="CenterAndExpand"
             HorizontalOptions="Center"
             Value="{Binding StepperValue, Mode=OneWayToSource}"/>
    <Label Font="Large"
           VerticalOptions="CenterAndExpand"
           HorizontalOptions="Center"
           Text="{Binding LabelText}"/>

  </StackLayout>

</ContentPage>