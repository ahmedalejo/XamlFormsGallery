<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamlFormsGallery.Views.HomeView"
             BindingContext="XamlFormsGallery.ViewModels.HomeViewModel"
             Title="Forms Gallery">

  <TableView Intent="Menu">
    <TableRoot>
      
      <TableSection Title="Views for Presentation">
        <TextCell Text="Label"
                  Command="{Binding NavigateCommand}"
                  CommandParameter = "LabelDemoView" />
        <TextCell Text="Image"
                  Command="{Binding NavigateCommand}"
                  CommandParameter = "ImageDemoView" />
        <TextCell Text="BoxView"
                  Command="{Binding NavigateCommand}"
                  CommandParameter = "BoxViewDemoView" />
        <TextCell Text="WebView"
                  Command="{Binding NavigateCommand}"
                  CommandParameter = "WebViewDemoView" />
        <TextCell Text="Map"
                  Command="{Binding NavigateCommand}"
                  CommandParameter = "MapDemoView" />
      </TableSection>
      
    </TableRoot>
  </TableView>

</ContentPage>
