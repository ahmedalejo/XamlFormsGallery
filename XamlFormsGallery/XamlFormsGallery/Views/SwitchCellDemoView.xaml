             x:Class="XamlFormsGallery.Views.SwitchCellDemoView">

  <StackLayout>

    <Label FontSize="50"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           Text="SwitchCell"/>
    <TableView Intent="Form">
      <TableRoot>
        <TableSection>
          <SwitchCell Text="Switch Cell" />
        </TableSection>
      </TableRoot>
    </TableView>

  </StackLayout>

</ContentPage>